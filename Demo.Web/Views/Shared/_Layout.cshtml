<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @RenderSection("DevExpressStyles", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("DevExpressScripts", required: false)
    @Styles.Render("~/styles/bootstrap")
    @Styles.Render("~/styles/packages")
    @RenderSection("styles", required: false)
</head>
<body>
    @Html.Partial("_NavBarPartial")
    <div class="container body-content">
        @RenderBody()
        <hr />
        @Html.Partial("_FooterPartial")
    </div>
    @Scripts.Render("~/scripts/bootstrap")
    @Scripts.Render("~/scripts/packages")
    @Scripts.Render("~/scripts/toast")
    @RenderSection("scripts", required: false)
</body>
</html>